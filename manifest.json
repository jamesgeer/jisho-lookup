{
    "manifest_version": 2,
    "name": "Jisho Lookup",
    "description": "Select a Japanese word to look up in Jisho",
    "version": "1.0",
    "homepage_url": "https://github.com/jamesgeer/firefox-jisho-lookup-extension",

    "background": {
        "scripts": [
            "lookup.js"
        ]
    },

    "permissions": [
        "activeTab",
        "contextMenus",
        "clipboardWrite"
    ]
}
